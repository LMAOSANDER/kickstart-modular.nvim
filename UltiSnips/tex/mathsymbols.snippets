\implies
endsnippet

context "math()"
snippet <= "implied by" wA
\impliedby
endsnippet

priority 100
context "math()"
snippet iff "\iff command A" wA
\iff
endsnippet

context "math()"
snippet leq "\leq command" wA
\leq
endsnippet

context "math()"
snippet geq "\geq command" wA
\geq
endsnippet

context "math()
snippet sim "similar" wA
\sim
endsnippet



