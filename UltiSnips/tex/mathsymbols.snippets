priority 100
context "math()"
snippet inn "in" wA
\in
endsnippet

context "math()"
snippet sus "subset" wA
\subset
endsnippet

context "math()"
snippet seq "subsetequal" wA
\subseteq
endsnippet

priority 10
context "math()"
snippet uu "union" wA
\cup
endsnippet

priority 100
context "math()"
snippet buu "big union" wA
\bigcup
endsnippet

priority 10
context "math()"
snippet nn "intersection" wA
\cap
endsnippet

