global !p
def math():
    return vim.eval('vimtex#syntax#in_mathzone()') == '1'
endglobal


# Alfanumeric symbols
context "math()"
snippet aa "alpha" wA
\alpha
endsnippet

context "math()"
snippet xi "xi" wA
\xi
endsnippet


context "math()"
snippet bb "beta" wA
\beta
endsnippet

context "math()"
snippet gg "gamma" wA
\gamma
endsnippet

context "math()"
snippet ee "epsilon" wA
\epsilon
endsnippet

context "math()"
snippet ss "sigma" wA
\sigma
endsnippet

context "math()"
snippet tt "theta" wA
\theta
endsnippet

context "math()"
snippet ww "omega" wA
\omega
endsnippet

context "math()"
snippet Phi "big phi" wA
\Phi
endsnippet

context "math()"
snippet phi "varphi" wA
\varphi
endsnippet

context "math()"
snippet delta "big delta" wA
\Delta
endsnippet

priority 10
context "math()"
snippet mm "mu" wA
\mu
endsnippet

priority 10
context "math()"
snippet nu "nu" wA
\nu 
endsnippet

context "math()"
snippet ll "lambda" wA
\lambda
endsnippet

# Special Alfanumeric symbols
context "math()"
snippet ell "ell" wA
\ell
endsnippet

