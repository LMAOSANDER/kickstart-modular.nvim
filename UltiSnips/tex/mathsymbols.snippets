snippet | "|" wA
\mid
endsnippet

# Set symbols/mappings
context "math()"
snippet !> "maptsto" wA
\mapsto
endsnippet

# Other
context "math()"
snippet -> "to" wA
\to
endsnippet

context "math()"
snippet oo "\infty command" wA
\infty
endsnippet

context "math()"
snippet exp "eulers number" wA
\e^{$1}$0
endsnippet

context "math()"
snippet pi "pi" wA
\pic
endsnippet
